<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>User List</title>

        <link rel="stylesheet" href="/style.css" />
    </head>
    <body>

        <h1>User List</h1>

        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user) => { %>
                    <tr>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <form method="POST" action="/users">
            <div>
                First Name
            </div>
            <div>
                <input name="user[first_name]" type="text" />
            </div>
            <div>
                Last Name
            </div>
            <div>
                <input name="user[last_name]" type="text" />
            </div>
            <div>
                Username
            </div>
            <div>
                <input name="user[username]" type="text" />
            </div>
            <div>
                Email
            </div>
            <div>
                <input name="user[email]" type="text" />
            </div>
            <div>
                <button type="submit">Submit User</button>
            </div>
        </form>

    </body>
</html>
