    <body>
      <div class="container" style="padding: 10px; text-align:center">
          <br>
          <a href="/articles"> <img src="http://i.imgur.com/yYrM5Pf.jpg" style="max-height:400px;"> </a>
      </div>
      <div class="container">
          <div class="card-panel grey lighten-3" style="color:#006064">
        <h4 style="text-align:center"> Edit Article </h4>
      <form class="edit-article-form" method="POST" action="/articles/<%= articles.id %>?_method=PUT" >
        <label>Title:</label>
        <input class="title-input" type="text" name = "title" value="<%= articles.title %>" />
        <br/>
        <h6><%=articles.post_date %></h6>
        <!-- <label>post_date:</label>
        <input class="date-input" type="text" value="<%= articles.post_date %>" />
        <br/> -->

        <label>Image:</label>
        <input class="image-input" type="text" name = "img" value="<%= articles.img %>" />
        <br/>

        <label>wiki_text:</label>
        <input class="" name= "wiki_text" type="text" value="<%= articles.wiki_text %>"/>
        <br/>


        <label>Category Type:</label>
        <input class="category-input" type="text" name='category' value="<%= articles.category %>" />

        <br/>

        <input type="hidden" name="id" value="<%= articles.id %>" />

        <button class="btn waves-effect waves-light light-blue" type="submit" name="action">Submit
          <i class ="material-icons right">send</i>
        </button>
        <!-- <input type="submit"> -->
    </form>
    <br>
    <button class="btn waves-effect waves-light light-blue" type="submit">
      <a href= "/articles/<%= articles.id %>"> Cancel</a>
    </button>
  </div>
