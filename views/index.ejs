<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  </head>

  <body>
    <div class="container">
        <br>
        <nav>
        <div class="nav wrapper blue">
            <h1 class="header-center"> Christina's Art Wiki </h1>
        </div>
      </nav>
        <br>
        <br>
    </div>

    <div class="divider"></div>

    <div class = "container">
    <div class = "row">
      <div class = "col s3">
        <div class=".input-field">
          <form method="POST" action="/articles">
            Title:<br>
            <input type="text" name="title"><br>
            Post Date:<br>
            <input type="text" name="post_date"></br>
            Category:<br>
            <input type="text" name="category"></br>
            Image url:<br>
            <input type="text" name="img"><br>
            Article Text:<br>
            <input type="text" name="wiki_text"></br>
            <button class="waves-effect waves-light btn light blue">New Post</button>

          </form>
        </div>
      </div>
      <div class="container">
        <br>
        <br>
    <div class="col s6 offset-s1">
      <% articles.forEach((article) => { %>
      <div>
        <h3><a href="/articles/<%= article.id %>"><%= article.title%></a></h3>
        <h6><%=article.post_date %></h6>
        <br>
        <br>
        <img src="<%= article.img%>" alt="">
        <p class="flow-text"><%= article.wiki_text %></p>
        <p class="flow-text">Tag: <%= article.category%> </p>
        <br>
        <br>
      </div>
      <% }); %>
  </div>
  </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  </div>
  </body>
</html>
